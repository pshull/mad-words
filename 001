<script>
// Random examples for placeholders
const examples = {
noun: ["question", "eye", "song", "door", "wind"],
number1: ["3", "9.23", "5000", "-99", "0"],
adjective1: ["afraid", "big", "dead", "fake", "true"],
time: ["minute", "hour", "day", "century"],
adjective2: ["far", "late", "tall", "young", "busy"],
website: ["dragonsrule.com", "unicornmagic.net", "spaceshipcentral.org", "robotworld.io"],
number2: ["-48.3", "29", "5.555", "20000", "0.01"]
};

// Set random placeholders
document.getElementById('noun').placeholder = `e.g., ${examples.noun[Math.floor(Math.random() * examples.noun.length)]}`;
document.getElementById('number1').placeholder = `e.g., ${examples.number1[Math.floor(Math.random() * examples.number1.length)]}`;
document.getElementById('adjective1').placeholder = `e.g., ${examples.adjective1[Math.floor(Math.random() * examples.adjective1.length)]}`;
document.getElementById('time').placeholder = `e.g., ${examples.time[Math.floor(Math.random() * examples.time.length)]}`;
document.getElementById('adjective2').placeholder = `e.g., ${examples.adjective2[Math.floor(Math.random() * examples.adjective2.length)]}`;
document.getElementById('website').placeholder = `e.g., ${examples.website[Math.floor(Math.random() * examples.website.length)]}`;
document.getElementById('number2').placeholder = `e.g., ${examples.number2[Math.floor(Math.random() * examples.number2.length)]}`;

// Form submission handler
document.getElementById('madlibs-form').addEventListener('submit', function(event) {
event.preventDefault();

// Get input values
const noun = document.getElementById('noun').value;
const number1 = document.getElementById('number1').value;
const adjective1 = document.getElementById('adjective1').value;
const time = document.getElementById('time').value;
const adjective2 = document.getElementById('adjective2').value;
const website = document.getElementById('website').value;
const number2 = document.getElementById('number2').value;

// Insert values into the story
document.getElementById('noun-result').textContent = noun;
document.getElementById('number1-result').textContent = number1;
document.getElementById('adjective1-result').textContent = adjective1;
document.getElementById('time-result').textContent = time;
document.getElementById('adjective2-result').textContent = adjective2;
document.getElementById('website-result').textContent = website;
document.getElementById('number2-result').textContent = number2;

// Show the story title and story
document.getElementById('story-title').classList.add('show');
document.getElementById('story').classList.add('show');

// Move navigation buttons below the story
const navButtons = document.querySelector('.navigation-buttons');
navButtons.classList.remove('initial-position');
navButtons.classList.add('story-position');

// Scroll down to the story section
document.getElementById('story-title').scrollIntoView({ behavior: 'smooth' });
});

// Home button functionality
document.querySelector('.navigation-buttons .home').addEventListener('click', function() {
window.location.href = 'https://www.sagemotion.com/madwords-home-v00-01-01'; // Redirect to back.com
});

// Next button functionality
document.querySelector('.navigation-buttons .next').addEventListener('click', function() {
window.location.href = 'https://www.sagemotion.com/madwords-002'; // Redirect to back.com
});
</script>
</body>
